<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- In debug builds allow cleartext traffic globally to make local emulators and dev servers work. -->
    <debug-overrides>
        <base-config cleartextTrafficPermitted="true" />
    </debug-overrides>

    <!-- Allow cleartext to local emulator hosts used during development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
        <domain includeSubdomains="false">10.0.2.2</domain>
        <domain includeSubdomains="false">192.168.1.4</domain>
        <domain includeSubdomains="false">192.168.1.2</domain>
    </domain-config>

    <!-- Fallback: do not allow cleartext to other hosts in non-debug builds -->
    <base-config cleartextTrafficPermitted="false" />
</network-security-config>
